<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.renovavision.cleanmvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0028cf89facff8068acd1184032bd508cc26c169" />

        <activity
            android:name=".ui.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.HomeActivity"
            android:label="@string/top_articles"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.TopImagesActivity"
            android:label="@string/top_images"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.ArticleActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.ImageActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>
